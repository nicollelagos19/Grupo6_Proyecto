@inherits LayoutComponentBase

<PageTitle>Proyecto_Imprenta_Grupo6</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>
    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    <span class="ml-md-auto">
                        Usuario Actual: @context.User.Claims.First().Value
                        <a href="/account/logout">Salir</a>
                    </span>
                </Authorized>

                <NotAuthorized>
                    <a href="login">Iniciar Sesión</a>
                </NotAuthorized>
            </AuthorizeView>  
        </div>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
