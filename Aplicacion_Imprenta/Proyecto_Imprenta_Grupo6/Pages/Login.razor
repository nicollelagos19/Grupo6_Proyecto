@page "/login"
@page "/login/{ErrorMessage}"
@inject NavigationManager navManager
@attribute [AllowAnonymous]

<h3>Iniciar Sesion</h3>

@if (ErrorMessage != null)
{
	<div class="text-danger">@ErrorMessage</div>
}

<form method="post" action="/account/login">
    <div class="form-group">
        <label><font size="7" color="Blue">Usuario:</font></label>
        <input type="text" size="7" name="Codigo" class="form-control col-sm-6 col-md-4" />
    </div>
    <div class="form-group">
        <label><font size="7" color="Pink">Contraseña:</font></label>
        <input type="password" size="7" name="Clave" class="form-control col-sm-6 col-md-4" />
    </div>
    <br>
    <button class="btn btn-primary"><font size="7" color="YELLOW">ENTRAR</font></button>

</form>

@code {
	[Parameter] public string ErrorMessage { get; set; }
}
